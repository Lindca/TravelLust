
@{
    ViewBag.Title = "Event";
}

<div class="jumbotron">
    <h2>My Events</h2>
    <p class="lead">Your Existing Events!</p>
    


</div>
<div class="jumbotron">
    <h2>New Event</h2>

    <form>
        <div class="row">
            <div class="col-md-4">
                <label>Name</label>
                <input type="text" class="form-control" id="name" placeholder="Musee d'Orsay">
            </div>
            <div class="col-md-4">
                <label>Event Type</label>
                <input type="text" class="form-control" id="eventType" placeholder="Attraction">
            </div>
            <div class="col-md-4">
                <label>Cost</label>
                <input type="text" class="form-control" id="cost" placeholder="20">
            </div>
        </div>
        <div class="row">
            <div class="col-sm-3">
                <label>Street Address</label>
                <input type="text" class="form-control" id="streetAddress" placeholder="123 Main Street">
            </div>
            <div class="col-sm-3">
                <label>State Or Region</label>
                <input type="text" class="form-control" id="stateOrRegion" placeholder="State Or Region">
            </div>
            <div class="col-sm-3">
                <label>Country</label>
                <input type="text" class="form-control" id="country" placeholder="USA">
            </div>
            <div class="col-sm-3">
                 <label>Zip Code</label>
                <input type="text" class="form-control" id="zipCode" placeholder="98778">
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6">
                <label>Start Date and Time</label>
                <input type="text" class="form-control" id="startDateTime" placeholder="01/01/2001 8:15PM">
            </div>
            <div class="col-lg-6">
                <label>End Date and Time</label>
                <input type="text" class="form-control" id="endDateTime" placeholder="01/01/2001 8:15PM">
            </div>
        </div>
    </form>
 
</div>
